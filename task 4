#dice rolling simulation
import random

rolls = 20
count_6 = 0
count_1 = 0
two_6_in_row = 0

previous_roll = 0

for i in range(rolls):
    roll = random.randint(1, 6)
    print("Roll", i+1, ":", roll)

    if roll == 6:
        count_6 += 1
    if roll == 1:
        count_1 += 1
    if roll == 6 and previous_roll == 6:
        two_6_in_row += 1

    previous_roll = roll

print("\nStatistics:")
print("Number of times rolled 6:", count_6)
print("Number of times rolled 1:", count_1)
print("Number of times two 6s in a row:", two_6_in_row)


#jumping jacks without program

total_jacks = 100
completed = 0

while completed < total_jacks:
    print("\nPerform 10 jumping jacks")
    completed += 10

    if completed >= total_jacks:
        print("Congratulations! You completed the workout.")
        break

    tired = input("Are you tired? (yes/y or no/n): ").lower()

    if tired == "yes" or tired == "y":
        skip = input("Do you want to skip the remaining sets? (yes/y or no/n): ").lower()
        if skip == "yes" or skip == "y":
            print("You completed a total of", completed, "jumping jacks.")
            break
        else:
            print("Remaining jumping jacks:", total_jacks - completed)
    else:
        print("Remaining jumping jacks:", total_jacks - completed)
